{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "bundler", // El est치ndar moderno para bundlers como Vite
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true, // Vite maneja la compilaci칩n, TS solo hace el chequeo
        "jsx": "react-jsx" // Habilita la nueva transformaci칩n JSX de React
    },
    "include": [
        "src"
    ], // Solo revisar치 los archivos dentro de 'src'
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ] // Para el config de Vite
}